 a(data-toggle="collapse", class="collapsed aqui a-faq__name", href="#"+id)
  p.-title=n
  .a-iconFaq
   .a-iconFaq__icon

//- Metadata
mixin metadata(t,d,url,type,img,imgAlt)
 link(rel="canonical", href=""+url)
 meta(name="og:title", content=""+t)
 meta(name="og:description", content=""+d)
 meta(name="og:url", content=""+url)
 meta(name="og:type", content=""+type)
 meta(name="og:image", content=""+img)
 meta(name="og:image:alt", content=""+imgAlt)
 meta(name="og:image:type", content="image/png")
 meta(name="og:image:secure_url", content=""+img)
 meta(name="title", content=""+t)
 meta(name="description", content=""+d)
 title=t

mixin article(pf,pt,mt)
 meta(name="article:publisher", content=""+pf)
 meta(name="article:published_time", content=""+pt)
 meta(name="article:modified_time", content=""+mt)